/* pages/answer/answer.wxss */
.top{
  display: flex;
 margin-left: 30rpx;
 margin-top: 30rpx;
}
.item{
  display: flex;
  align-items: center;
  color: rgb(25, 123, 216);
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(215, 218, 243, 0.6);
  margin-left: 5rpx;
  border-radius: 25rpx;
}
.item::before,.item::after{
  content: "";
  display:inline-block;
  height: 50rpx;
  width: 30rpx;

}
.head{
  padding: 35rpx;
  font-size: 40rpx;
  padding-bottom: 10rpx;
}
.text{
  margin:0 35rpx;
  font-size: 35rpx;
  margin-bottom: 15rpx;
}
.comment{
  display: flex;
  padding-left: 35rpx;
}
.comment_item{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #949797;
  justify-content: center;
  margin-left: 30rpx;
 
}
.comment_item image{
  height: 45rpx;
  width: 45rpx;
  margin-right: 15rpx;
}
.comment .right{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
  background-color: #52C980;
  height: 80rpx;
  width: 150rpx;
  font-size: 25rpx;
  margin-right: 50rpx;
  border-radius: 15rpx;
  color: white;
}
.main1{
  display: flex;
  width: 100%;
 
}
.main_item{
  display: flex;
  width: 50%;
  height: 90rpx;
  font-size: 30rpx;
  color: #949797;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #eee;
}
.main_item image{
  height: 55rpx;
  width: 55rpx;
  margin-right: 20rpx;
}
